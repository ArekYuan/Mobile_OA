<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/homePager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/color_fff"
        android:orientation="horizontal"
        android:paddingTop="7dp">

        <RelativeLayout
            android:id="@+id/homeMenuMainRelative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/homeMainImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/home_img_selector"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/homeMainTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/homeMainImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="未审批"
                android:textColor="@drawable/home_txt_selector"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/homeMenuBatchRelative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/homeBatchImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/fornum_img_selector"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/homeBatchTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/homeBatchImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="已审批"
                android:textColor="@drawable/home_txt_selector"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/homeMenuMyRelative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/homeMyImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/my_img_selector"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/homeMyTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/homeMyImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="抄送给我"
                android:textColor="@drawable/home_txt_selector"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
